{
  "name": "ergo-dashboard",
  "version": "1.5.0",
  "description": "Ergo - 基于OpenClaw的个人AI管家控制台（实时监控与自动化）",
  "main": "index.html",
  "scripts": {
    "start": "node server/frontend-with-proxy.js",
    "start:legacy": "python -m http.server 8081",
    "dev": "node server/frontend-with-proxy.js",
    "api": "node server/api-bridge.js",
    "pairing": "node server/auto-pairing-watcher.js",
    "start:all": "concurrently \"npm run start\" \"npm run api\" \"npm run pairing\"",
    "test": "node tests/smoke-test.js",
    "test:local": "node tests/smoke-test.js --local",
    "test:public": "node tests/smoke-test.js --public",
    "test:auth": "node tests/run-auth-tests.js"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "http-proxy-middleware": "^3.0.5",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terryzin/Ergo.git"
  },
  "keywords": [
    "openclaw",
    "ai-assistant",
    "dashboard"
  ],
  "author": "terryzin",
  "license": "MIT",
  "homepage": "https://github.com/terryzin/Ergo#readme"
}
